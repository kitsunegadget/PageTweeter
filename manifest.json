{
    "manifest_version": 2,
    "name": "Page Tweeter",
    "version": "2.3",
    "description": "右クリックとアイコンからページをツイートできます。",
    "icons": {
        "16": "PTicon.png",
        "48": "PTicon.png",
        "128": "PTicon.png"
    },
    "author": "YuY",
    "background": {
        "scripts": ["js/bg.js"],
        "persistent": false
    },
    "page_action": {
        "default_title": "Page Tweeter",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/content.js"]
        }
    ],
    "permissions": ["activeTab", "contextMenus", "declarativeContent"]
}
