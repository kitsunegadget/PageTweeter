{
    "manifest_version": 2,
    "name": "Page Tweeter",
    "version": "1.1",
    "description": "右クリックからページをツイートできます。",
    "icons": {
        "16": "PTicon.png",
        "48": "PTicon.png",
        "128": "PTicon.png"
    },
    "author": "hitakiyu",
    "background": {
        "scripts": ["bg.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["activeTab", "contextMenus"]
}
